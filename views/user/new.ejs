<div class="signUp container">
  <% if(flash && flash.err) { %>
	  <ul class="alert alert-danger">
	  <h3>Validation Error</h3>	
	  <% Object.keys(flash.err.ValidationError).forEach(function(error){ %>
	  	<li><%-  JSON.stringify(flash.err.ValidationError[error][0].message).replace(/\\/g, '') %></li>
	  <% }) %>
	  </ul>
  <% } %>
  <form action="/user/create" method="POST"class="form-signin" role="form">
    <h2 class="form-signin-heading">Sign Up</h2>
    <input type="email" class="form-control textInput" placeholder="Email address" required="" autofocus="" name="email">
    <input type="password" class="form-control textInput" placeholder="Password" required="" name="password">
    <input type="password" class="form-control textInput" placeholder="Password Confirmation" required="" name="confirmation">
    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Sign Up">
    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
  </form>
</div>