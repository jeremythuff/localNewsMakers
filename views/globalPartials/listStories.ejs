<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Views</th>
        <th>Comments</th>
        <th>Score</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% _.each(stories, function(story) { %>
        <tr data-id='<%= story.id %>' data-model='story'>
          <td><a href='/story/read/<%= story.id %>'><%= story.title %></a></td>
          <td><span class="badge"><%= story.views %></span></td>
          <td><span class="badge"><%= story.comments %></span></td>
          <td><span class="badge"><%= story.score %></span></td>
          <td>
            <% if(!story.published) { %>
            <a href="/story/publish/<%=story.id%>"><button class="btn btn-success btn-sm">Publish</button></a>
          <% } else { %>
            <a  href="/story/unpublish/<%=story.id%>"><button class="btn btn-warning btn-sm">Unpublish</button></a>
          <% } %>
          </td>
          <td><a href='/story/edit/<%= story.id %>' class="btn btn-sm btn-warning">Edit</a></td>
          <td>
            
            <button class="deleteBtn btn btn-sm btn-danger">Delete</button>
            <form action="/story/destroy/<%- story.id %>" method="POST">
              <div class="btn-group confirmDelete" style="display:none;">
                <button type="button" class="btn btn-sm btn-danger disabled">Delete</button>
                <input type="hidden" name="_method" value="delete" />
                <input type="submit" value="Confirm" class="btn btn-sm btn-success">
                <input type="hidden" name="_csrf" value="<%= _csrf %>" />  
              </div>
            </form>                    
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>